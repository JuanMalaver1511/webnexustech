---
interface Props {
    title: string;
}
const { title } = Astro.props;
---
<style>
  h1 {
    text-align: left; 
font-family: Arial Black; 
font-weight: bold; 
color: #007AFF; 
text-shadow: 0 3px 0 #ffffff, 0 5px 0 #ffffff,  0 10px 10px rgba(255, 255, 255, 0.589);
}

</style>

<h1 class="neon-text md:text-[80px] text-[40px]" data-text={title}>
    {title}
</h1>
